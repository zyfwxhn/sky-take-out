<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealMapper">
    <insert id="insert" parameterType="Setmeal" useGeneratedKeys="true" keyProperty="id">
        insert into setmeal
        (category_id, name, price, status, description, image, create_time, update_time, create_user, update_user)
        values (#{categoryId}, #{name}, #{price}, #{status}, #{description}, #{image}, #{createTime}, #{updateTime},
                #{createUser}, #{updateUser})
    </insert>

    <select id="list" parameterType="Setmeal" resultType="Setmeal">
        select * from setmeal
        <where>
            <if test="name != null">
                and name like concat('%',#{name},'%')
            </if>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>


    <update id="update" useGeneratedKeys="true" keyProperty="id">
        update setmeal
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="image != null">
                image = #{image},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="updateUser != null">
                update_user = #{updateUser}
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteById">
        delete from setmeal where id = #{id}
    </delete>

    <select id="countByCategoryId" resultType="java.lang.Integer">
        select count(id) from setmeal where category_id = #{categoryId}
    </select>
    <select id="pageQuery" resultType="com.sky.vo.SetmealVO">
        select
        s.*,c.name categoryName
        from
        setmeal s
        left join
        category c
        on
        s.category_id = c.id
        <where>
            <if test="name != null">
                and s.name like concat('%',#{name},'%')
            </if>
            <if test="status != null">
                and s.status = #{status}
            </if>
            <if test="categoryId != null">
                and s.category_id = #{categoryId}
            </if>
        </where>
        order by s.create_time desc
    </select>
    <select id="getById" resultType="com.sky.entity.Setmeal">
        select * from setmeal where id = #{id}
    </select>
    <resultMap id="setmealWithDishMap" type="com.sky.vo.SetmealVO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="category_id" property="categoryId"/>
        <result column="price" property="price"/>
        <result column="status" property="status"/>
        <result column="description" property="description"/>
        <result column="image" property="image"/>
        <result column="update_time" property="updateTime"/>
        <result column="categoryName" property="categoryName"/>

        <collection property="setmealDishes" ofType="com.sky.entity.SetmealDish">
            <result column="dish_id" property="dishId"/>
            <result column="dishName" property="name"/>
            <result column="dishPrice" property="price"/>
            <result column="copies" property="copies"/>
        </collection>
    </resultMap>

    <select id="getByIdWithDish" resultMap="setmealWithDishMap">
        SELECT
            s.*,
            c.name AS categoryName,
            sd.dish_id,
            sd.name AS dishName,
            sd.price AS dishPrice,
            sd.copies
        FROM setmeal s
                 LEFT JOIN category c ON s.category_id = c.id
                 LEFT JOIN setmeal_dish sd ON s.id = sd.setmeal_id
        WHERE s.id = #{id}
    </select>


</mapper>